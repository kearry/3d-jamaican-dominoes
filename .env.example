# Database Configuration
# Replace with your actual database connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/dominoes?schema=public"

# NextAuth.js Configuration
# Generate a secret with: `openssl rand -base64 32`
NEXTAUTH_SECRET="your-nextauth-secret-change-me-in-production"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers
# GitHub
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# Google
GOOGLE_ID="your-google-client-id"
GOOGLE_SECRET="your-google-client-secret"

# Application Configuration
NODE_ENV="development" # or "production" in production environment

# Game Configuration
NEXT_PUBLIC_MAX_PLAYERS=4
NEXT_PUBLIC_DEFAULT_GAME_POINTS=200
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true # set to false in production

# Analytics (optional)
# NEXT_PUBLIC_ANALYTICS_ID="your-analytics-id"